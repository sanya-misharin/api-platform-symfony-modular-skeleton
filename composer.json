{
    "name": "api-platform/symfony-modular-skeleton",
    "description": "Modular Symfony + API Platform skeleton for building REST API backends",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=8.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "api-platform/core": "^4.1",
        "api-platform/doctrine-orm": "^4.1",
        "api-platform/symfony": "^4.1",
        "doctrine/doctrine-bundle": "^2.12",
        "doctrine/doctrine-migrations-bundle": "^3.3",
        "doctrine/orm": "^3.5",
        "doctrine/persistence": "*",
        "psr/log": "^3.0",
        "symfony/console": "^7.3",
        "symfony/dotenv": "^7.3",
        "symfony/expression-language": "^7.3",
        "symfony/flex": "^2.4",
        "symfony/framework-bundle": "^7.3",
        "symfony/mercure-bundle": "^0.3.5",
        "symfony/monolog-bundle": "^3.8",
        "symfony/property-access": "^7.3",
        "symfony/property-info": "^7.3",
        "symfony/runtime": "^7.3",
        "symfony/security-bundle": "^7.3",
        "symfony/serializer": "^7.3",
        "symfony/uid": "^7.3",
        "symfony/validator": "^7.3",
        "symfony/yaml": "^7.3"
    },
    "require-dev": {
        "api-platform/schema-generator": "^5.0",
        "ergebnis/composer-normalize": "^2.40",
        "friendsofphp/php-cs-fixer": "^3.88",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-doctrine": "^1.4",
        "phpstan/phpstan-symfony": "^1.4",
        "rector/rector": "^1.0",
        "roave/security-advisories": "dev-latest",
        "symfony/debug-bundle": "^7.3",
        "symfony/phpunit-bridge": "^7.3",
        "symfony/var-dumper": "~7.2.0",
        "symfony/web-profiler-bundle": "^7.3"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "public-dir": "public",
        "symfony": {
            "allow-contrib": false,
            "require": "^7.3"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "lint": [
            "@lint:composer",
            "@lint:php"
        ],
        "lint:composer": "composer validate --strict",
        "lint:php": "phpstan analyse",
        "test": "phpunit --colors=always"
    }
}
